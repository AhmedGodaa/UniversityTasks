    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Main View" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="35.0" />
      </font>
   </Text>
    <Button fx:id="connectButton" onAction="#addProductButton" prefHeight="50.0" prefWidth="454.0" text="Add Product" />
    <Button layoutX="40.0" layoutY="104.0" onAction="#deleteProductButton" prefHeight="51.0" prefWidth="458.0" text="Remove Product" />
    <Button layoutX="40.0" layoutY="164.0" onAction="#searchProductButton" prefHeight="52.0" prefWidth="458.0" text="Search Product" />

    <Label fx:id="welcomeText" />
</VBox>
